    //Finished PlaceAPI

    <Button
        android:id="@+id/new_offer_button_back"
        android:layout_width="16dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/new_offer_button_back"
        app:layout_constraintBottom_toBottomOf="@+id/search_offer_textView_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/new_offer_textView_header" />

    <TextView
        android:id="@+id/new_offer_textView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Νέα προσφορά"
        android:textColor="#FFAA5E"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="10dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_offer_textView_header">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:background="@null"
            android:hint="Άπο"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#817F7F"
            android:textColorHint="#000"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="85dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="10dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_offer_editText_from">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:background="@null"
            android:hint="Πρός"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#817F7F"
            android:textColorHint="#000"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="85dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="5dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintStart_toStartOf="@+id/new_offer_editText_to"
        app:layout_constraintTop_toBottomOf="@+id/new_offer_editText_to">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="156dp"
            android:layout_height="42dp"
            android:background="@null"
            android:backgroundTint="#FFC088"
            android:hint="Ημερ/νία"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:textColor="#817F7F"
            android:textColorHint="#FFC088"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="446dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="5dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintBottom_toBottomOf="@+id/new_offer_editText_date"
        app:layout_constraintEnd_toEndOf="@+id/new_offer_editText_to"
        app:layout_constraintTop_toTopOf="@+id/new_offer_editText_date">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="156dp"
            android:layout_height="42dp"
            android:background="@null"
            android:backgroundTint="#FFC088"
            android:hint="Ώρα"
            android:inputType="time"
            android:paddingLeft="20dp"
            android:textColor="#817F7F"
            android:textColorHint="#FFC088"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="446dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="5dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintStart_toStartOf="@+id/new_offer_editText_date"
        app:layout_constraintTop_toBottomOf="@+id/new_offer_editText_date">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="158dp"
            android:layout_height="42dp"
            android:background="@null"
            android:backgroundTint="#FFC088"
            android:hint="Θέσεις"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#817F7F"
            android:textColorHint="#FFC088"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="446dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_cases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="5dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintBottom_toBottomOf="@+id/new_offer_editText_seats"
        app:layout_constraintEnd_toEndOf="@+id/new_offer_editText_to"
        app:layout_constraintTop_toTopOf="@+id/new_offer_editText_seats">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="156dp"
            android:layout_height="42dp"
            android:background="@null"
            android:backgroundTint="#FFC088"
            android:hint="Αποσκεύες"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:textColor="#817F7F"
            android:textColorHint="#FFC088"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="446dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_offer_editText_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/textview_search_add_offer"
        android:paddingTop="5dp"
        android:textColorHint="#000"
        app:hintTextAppearance="@style/CustomTextAppearance"
        app:layout_constraintStart_toStartOf="@+id/new_offer_editText_seats"
        app:layout_constraintTop_toBottomOf="@+id/new_offer_editText_seats">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_height="115dp"
            android:background="@null"
            android:backgroundTint="#FFC088"
            android:hint="Περιγραφή"
            android:inputType="textMultiLine"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:textColor="#817F7F"
            android:textColorHint="#FFC088"
            android:textSize="17dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="446dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/new_offer_button_next"
        android:layout_width="326dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/search_offer_btn"
        android:text="Καταχώρηση"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>