<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteReviewActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#F8F7F3"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
    <TextView
        android:id="@+id/review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Αξιολογήστε τον χρήστη"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/review_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/blackshape"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="15dp"

            />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tyler Joseph"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/circle_image"
            app:layout_constraintBottom_toBottomOf="@id/circle_image"
            app:layout_constraintTop_toTopOf="@id/circle_image"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/friendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:layout_marginStart="10dp"
        android:text="Φιλικός"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/reliable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/friendly"
        app:layout_constraintTop_toBottomOf="@id/friendly"
        android:text="Αξιόπιστος"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/carefull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/reliable"
        app:layout_constraintTop_toBottomOf="@id/reliable"
        android:text="Προσεκτικός"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <ImageButton
        android:id="@+id/friendly_sad_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="@id/friendly"
        app:layout_constraintBottom_toBottomOf="@id/friendly"
        android:background="@drawable/ic_sad_face_outlined"
        android:backgroundTint="#CC3636"
        />
    <ImageButton
        android:id="@+id/friendly_neutral_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/friendly_sad_btn"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/friendly"
        app:layout_constraintBottom_toBottomOf="@id/friendly"
        android:background="@drawable/ic_neutral_face_outlined"
        android:backgroundTint="#CE823F"
        />

    <ImageButton
        android:id="@+id/friendly_happy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/friendly_neutral_btn"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/friendly"
        app:layout_constraintBottom_toBottomOf="@id/friendly"
        android:background="@drawable/ic_neutral_face_outlined"
        android:backgroundTint="#44B840"
        />

    <ImageButton
        android:id="@+id/reliable_sad_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="@id/reliable"
        app:layout_constraintBottom_toBottomOf="@id/reliable"
        android:background="@drawable/ic_sad_face_outlined"
        android:backgroundTint="#CC3636"
        />

    <ImageButton
        android:id="@+id/reliable_neutral_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/reliable_sad_btn"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/reliable"
        app:layout_constraintBottom_toBottomOf="@id/reliable"
        android:background="@drawable/ic_neutral_face_outlined"
        android:backgroundTint="#CE823F"
        />

    <ImageButton
        android:id="@+id/reliable_happy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/reliable_neutral_btn"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/reliable"
        app:layout_constraintBottom_toBottomOf="@id/reliable"
        android:background="@drawable/ic_neutral_face_outlined"
        android:backgroundTint="#44B840"
        />
    <ImageButton
        android:id="@+id/carefull_sad_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="@id/carefull"
        app:layout_constraintBottom_toBottomOf="@id/carefull"
        android:background="@drawable/ic_sad_face_outlined"
        android:backgroundTint="#CC3636"
        />
    <ImageButton
        android:id="@+id/carefull_neutral_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/carefull_sad_btn"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/carefull"
        app:layout_constraintBottom_toBottomOf="@id/carefull"
        android:background="@drawable/ic_neutral_face_outlined"
        android:backgroundTint="#CE823F"
        />

    <ImageButton
        android:id="@+id/carefull_happy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/carefull_neutral_btn"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/carefull"
        app:layout_constraintBottom_toBottomOf="@id/carefull"
        android:background="@drawable/ic_neutral_face_outlined"
        android:backgroundTint="#44B840"

        />
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>