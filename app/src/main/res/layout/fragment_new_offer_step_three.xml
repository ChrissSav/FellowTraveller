<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="30dp"
    android:background="#fff"
    tools:context=".NewOfferActivity">

    <TextView
        android:id="@+id/new_offer_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ωρε μια στροφαρα ελα γιωργη"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Θέσεις"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_new_offer_step_three_seat_minus"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/fragment_new_offer_step_three_seats"
            android:layout_centerVertical="true"
            android:background="@color/lightGrey"
            android:text="-"
            android:textColor="@color/grey"
            android:textSize="26sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fragment_new_offer_step_three_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/fragment_new_offer_step_three_seat_plus"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="1"
            android:ems="1"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <Button
            android:id="@+id/fragment_new_offer_step_three_seat_plus"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/lightGrey"
            android:text="+"
            android:textColor="@color/grey"
            android:textSize="26sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Αποσκευές"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_new_offer_step_three_baggage_minus"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/fragment_new_offer_step_three_baggage"
            android:layout_centerVertical="true"
            android:background="@color/lightGrey"
            android:text="-"
            android:textColor="@color/grey"
            android:textSize="26sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fragment_new_offer_step_three_baggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/fragment_new_offer_step_three_baggage_plus"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:ems="1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <Button
            android:id="@+id/fragment_new_offer_step_three_baggage_plus"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/lightGrey"
            android:text="+"
            android:textColor="@color/grey"
            android:textSize="26sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_new_offer_step_three_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Τιμή Ταξιδιού"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Ανά άτομο"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/fragment_fragment_new_offer_step_three_step_three_editText_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toStartOf="@+id/textView6"
            android:layout_centerVertical="true"
            android:ems="3"
            android:inputType="number"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="€"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Σύνολο"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_new_offer_step_three_editText_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView10"
            android:layout_centerVertical="true"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="€"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>