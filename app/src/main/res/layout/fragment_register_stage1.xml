<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterStage1Fragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RegisterStage1Fragment_editText_name"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_search_add_offer"
            android:paddingTop="8dp"
            android:textColorHint="#000"
            app:hintTextAppearance="@style/CustomTextAppearance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RegisterStage1Fragment_editText_name1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:backgroundTint="#FFC088"
                android:hint="Όνομα"
                android:inputType="text"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RegisterStage1Fragment_editText_email"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_search_add_offer"
            android:paddingTop="8dp"
            android:textColorHint="#000"
            app:hintTextAppearance="@style/CustomTextAppearance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegisterStage1Fragment_editText_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RegisterStage1Fragment_editText_email1"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:backgroundTint="#FFC088"
                android:hint="Email"
                android:inputType="text"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RegisterStage1Fragment_editText_password"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_search_add_offer"
            android:paddingTop="8dp"
            android:textColorHint="#000"
            app:hintTextAppearance="@style/CustomTextAppearance"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegisterStage1Fragment_editText_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RegisterStage1Fragment_editText_password1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:backgroundTint="#FFC088"
                android:hint="Κωδικός"
                android:inputType="textPassword"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RegisterStage1Fragment_editText_password2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_search_add_offer"
            android:paddingTop="8dp"
            android:textColorHint="#000"
            app:hintTextAppearance="@style/CustomTextAppearance"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegisterStage1Fragment_editText_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RegisterStage1Fragment_editText_password22"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:backgroundTint="#FFC088"
                android:hint="Επαλήθευση κωδικού"
                android:inputType="textPassword"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>