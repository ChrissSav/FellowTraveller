<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:paddingStart="80dp"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/message_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_shape"
        android:backgroundTint="@color/blue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:text="Καλησπέρα.. τι κάνεις;"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_shape"
        android:layout_marginTop="3dp"
        android:layout_alignEnd="@id/message_shape"
        android:layout_marginEnd="15dp"
        android:text="Διαβάστηκε"
        android:textSize="10sp"
        android:visibility="visible"
    />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/profile_picture"
        android:visibility="gone" />

</RelativeLayout>