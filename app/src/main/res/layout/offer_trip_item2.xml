<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_trip_page_backround"
            android:maxWidth="375dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/offerItem2_user_pic"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:elevation="1dp"
                android:src="@drawable/blackshape"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/offerItem2_textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Σπυρίδων Ράντογλου"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/offerItem2_user_pic"
                app:layout_constraintTop_toTopOf="@+id/offerItem2_user_pic" />


            <TextView
                android:id="@+id/offerItem_textView_stars"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/offerItem2_user_pic"
                app:layout_constraintStart_toStartOf="@+id/offerItem2_textView_name"
                app:layout_constraintTop_toBottomOf="@+id/offerItem2_textView_name" />

            <TextView
                android:id="@+id/offerItem2_textView_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/offerItem_textView_stars"
                app:layout_constraintStart_toEndOf="@+id/offerItem_textView_stars"
                app:layout_constraintTop_toTopOf="@+id/offerItem_textView_stars" />

            <TextView
                android:id="@+id/offer_trip_item2_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Αθήνα"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/offerItem2_user_pic"
                app:layout_constraintTop_toBottomOf="@+id/offerItem2_user_pic" />

            <TextView
                android:id="@+id/offer_trip_item2_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Θεσσαλονίκη"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/offer_trip_item2_from"
                app:layout_constraintTop_toBottomOf="@+id/offer_trip_item2_from" />

            <TextView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/blue_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/offer_trip_item2_from"
                app:layout_constraintTop_toBottomOf="@+id/offer_trip_item2_to" />

            <TextView
                android:id="@+id/offer_trip_item2_textView_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="22 Oct 2019, 9:00AM"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/offerItem2_textView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="10"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/blue_square"
                android:gravity="center"
                android:text="€"
                android:textColor="#8297FF"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>