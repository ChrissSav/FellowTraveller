<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_appBar"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="#FFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        android:src="@drawable/profile_picture"
                       />
                    <ImageButton
                        android:id="@+id/profile_image_upload_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_add"
                        android:backgroundTint="#5A5858"
                        android:elevation="1.1dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignBottom="@id/profile_picture"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_alignEnd="@id/profile_picture"


                        />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="85dp"
                            app:contentPaddingTop="15dp"
                            app:contentPaddingRight="15dp"
                            app:contentPaddingLeft="15dp"
                            app:contentPaddingBottom="15dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#DDD5CC"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">



                                    <TextView
                                    android:id="@+id/profile_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Spuros Rantoglou"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginTop="50dp"
                                    android:layout_gravity="center"/>

                                    <TextView
                                    android:id="@+id/profile_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/profile_name"
                                    android:text="Είμαι 21 χρονών σπουδάζω πληροφορική και έχω αγάπη για την φωτογραφία και το βίντεο."
                                    android:textSize="18sp"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center_horizontal"/>
                                    <TextView
                                        android:id="@+id/profile_mark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_location_mark"
                                        android:backgroundTint="#5F5050"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/profile_info"
                                        android:layout_marginTop="15dp"
                                        />

                                    <TextView
                                    android:id="@+id/profile_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Φιλώτας, Φλώρινας"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintLeft_toLeftOf="@id/profile_mark"
                                        app:layout_constraintTop_toTopOf="@id/profile_mark"
                                        app:layout_constraintBottom_toBottomOf="@id/profile_mark"
                                        app:layout_constraintStart_toEndOf="@id/profile_mark"
                                        android:layout_marginStart="5dp"/>
                                    <TextView
                                        android:id="@+id/profile_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_smartphone"
                                        android:backgroundTint="#5F5050"
                                        app:layout_constraintLeft_toLeftOf="@id/profile_location"
                                        app:layout_constraintTop_toTopOf="@id/profile_location"
                                        app:layout_constraintBottom_toBottomOf="@id/profile_location"
                                       app:layout_constraintEnd_toStartOf="@+id/profile_number"/>



                                <TextView
                                    android:id="@+id/profile_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6974590287"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="@+id/profile_phone"
                                    app:layout_constraintTop_toTopOf="@+id/profile_phone" />


                                   <TextView
                                       android:id="@+id/profile_edit_tV"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:textSize="14sp"
                                       android:text="Edit"
                                       android:textStyle="italic"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintLeft_toLeftOf="parent"
                                       />
                                    <ImageButton
                                        android:id="@+id/profile_edit_button"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        app:layout_constraintTop_toTopOf="@id/profile_edit_tV"
                                        app:layout_constraintBottom_toBottomOf="@+id/profile_edit_tV"
                                        app:layout_constraintStart_toEndOf="@+id/profile_edit_tV"
                                        android:layout_marginStart="5dp"
                                        android:background="@drawable/ic_edit"
                                        android:backgroundTint="#5F5050"
                                        />
                                    <TextView
                                        android:id="@+id/profile_stars"
                                        android:layout_width="80dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/star_4_half"
                                        app:layout_constraintTop_toBottomOf="@+id/profile_mark"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="20dp"
                                        />
                                    <TextView
                                        android:id="@+id/profile_rating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@+id/profile_stars"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        android:layout_marginTop="5dp"

                                        android:text="Rating"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        




                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#202540"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:theme="@style/NavigationTheme"
        app:headerLayout="@layout/header_drawer"
        app:menu="@menu/my_menu"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:itemBackground="@drawable/nav_item_active_background"
        app:itemIconPadding="20dp"
        app:itemHorizontalPadding="25dp" />

</androidx.drawerlayout.widget.DrawerLayout>