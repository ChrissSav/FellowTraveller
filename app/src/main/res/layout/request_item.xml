<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/request_item_CircleImageView_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/notification_item_backround"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/request_item_textView_name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text=""
            app:layout_constraintEnd_toStartOf="@+id/request_item_textView_bag"
            app:layout_constraintStart_toEndOf="@+id/request_item_CircleImageView_pic"
            app:layout_constraintTop_toTopOf="@+id/request_item_CircleImageView_pic" />

        <TextView
            android:id="@+id/request_item_textView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_CircleImageView_pic"
            app:layout_constraintStart_toEndOf="@+id/request_item_CircleImageView_pic" />

        <Button
            android:id="@+id/request_item_button_reject"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_reject_request"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_button_accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/request_item_button_accept" />

        <Button
            android:id="@+id/request_item_button_accept"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_accept_request"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_CircleImageView_pic"
            app:layout_constraintEnd_toStartOf="@+id/request_item_button_reject"
            app:layout_constraintTop_toTopOf="@+id/request_item_CircleImageView_pic" />

        <TextView
            android:id="@+id/request_item_textView_bag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/black_suitcase"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_button_accept"
            app:layout_constraintEnd_toStartOf="@+id/request_item_button_accept"
            app:layout_constraintTop_toTopOf="@+id/request_item_button_accept"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/request_item_textView_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="4.5"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_textView5"
            app:layout_constraintStart_toEndOf="@+id/request_item_textView5"
            app:layout_constraintTop_toTopOf="@+id/request_item_textView5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>