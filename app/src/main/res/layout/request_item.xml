<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/request_item_textView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/notification_item_backround"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/request_item_textView_name"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/request_item_textView"
            app:layout_constraintTop_toTopOf="@+id/request_item_textView" />

        <TextView
            android:id="@+id/request_item_textView5"
            android:layout_width="69dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/star_4"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_textView"
            app:layout_constraintStart_toEndOf="@+id/request_item_textView" />

        <Button
            android:id="@+id/request_item_button_reject"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_reject_request"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_button_accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/request_item_button_accept" />

        <Button
            android:id="@+id/request_item_button_accept"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_accept_request"
            app:layout_constraintBottom_toBottomOf="@+id/request_item_textView"
            app:layout_constraintEnd_toStartOf="@+id/request_item_button_reject"
            app:layout_constraintTop_toTopOf="@+id/request_item_textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>