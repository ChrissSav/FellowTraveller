        <TextView
            android:id="@+id/searchItem_textView_adminImage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/blackshape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tripPage_textView_stars"
            android:layout_width="81dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/star_4"
            app:layout_constraintBottom_toBottomOf="@+id/searchItem_textView_adminImage"
            app:layout_constraintStart_toEndOf="@+id/searchItem_textView_adminImage"
            app:layout_constraintTop_toBottomOf="@+id/searchItem_textView_name" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
