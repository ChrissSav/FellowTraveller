            android:id="@+id/searchItem_textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 ευρώ"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/searchItem_textView_to"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/searchItem_textView_from" />
