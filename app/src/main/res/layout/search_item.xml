            app:layout_constraintStart_toStartOf="@+id/searchItem_textView_adminImage"
            app:layout_constraintTop_toBottomOf="@+id/searchItem_textView_adminImage" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Πρός"
            app:layout_constraintStart_toStartOf="@+id/searchItem_textView_adminImage"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/searchItem_textView_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Αθήνα"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="@+id/textView24"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/searchItem_textView_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Θεσσαλονίκη"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/searchItem_textView_from"
            app:layout_constraintTop_toTopOf="@+id/textView25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Λεπτομέρεις"
            android:textColor="#FFAA5E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView37"
            app:layout_constraintEnd_toStartOf="@+id/textView36"
            app:layout_constraintStart_toEndOf="@+id/textView37"
            app:layout_constraintTop_toTopOf="@+id/textView37" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:layout_marginEnd="32dp"
            android:background="#FFAA5E"
            app:layout_constraintBottom_toBottomOf="@+id/textView37"
