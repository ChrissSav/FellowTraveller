<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:maxWidth="375dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_trip_page_backround">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/black_suitcase"
                app:layout_constraintBottom_toBottomOf="@+id/textView22"
                app:layout_constraintEnd_toEndOf="@+id/textView23"
                app:layout_constraintTop_toTopOf="@+id/textView22" />

            <TextView
                android:id="@+id/searchItem_textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Σπυρίδων Ράντογλου"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/searchItem_user_pic"
                app:layout_constraintTop_toTopOf="@+id/searchItem_user_pic" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/searchItem_user_pic"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="1dp"
                android:src="@drawable/blackshape" />


            <TextView
                android:id="@+id/searchItem_textView_stars"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/searchItem_user_pic"
                app:layout_constraintStart_toStartOf="@+id/searchItem_textView_name"
                app:layout_constraintTop_toBottomOf="@+id/searchItem_textView_name" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Άπο"
                android:textSize="14sp"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="@+id/searchItem_user_pic"
                app:layout_constraintTop_toBottomOf="@+id/searchItem_user_pic" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Πρός"
                android:textSize="14sp"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="@+id/searchItem_user_pic"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <TextView
                android:id="@+id/searchItem_textView_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Αθήνα"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toTopOf="@+id/textView24"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/searchItem_textView_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Θεσσαλονίκη"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView25"
                app:layout_constraintStart_toStartOf="@+id/searchItem_textView_from"
                app:layout_constraintTop_toTopOf="@+id/textView25" />

            <LinearLayout
                android:id="@+id/search_trip_item_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/textView25">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#FFAA5E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Λεπτομέρειες"
                    android:textColor="#FFAA5E"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#FFAA5E" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_calendar"
                app:layout_constraintStart_toStartOf="@+id/searchItem_user_pic"
                app:layout_constraintTop_toBottomOf="@+id/search_trip_item_linearLayout" />

            <TextView
                android:id="@+id/searchItem_textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="20/10/2019"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintStart_toEndOf="@+id/textView21"
                app:layout_constraintTop_toTopOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_clock"
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/searchItem_textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView22"
                app:layout_constraintStart_toStartOf="@+id/searchItem_textView_date"
                app:layout_constraintTop_toTopOf="@+id/textView22" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/black_seat"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintEnd_toStartOf="@+id/searchItem_textView_seats"
                app:layout_constraintTop_toTopOf="@+id/textView21" />

            <TextView
                android:id="@+id/searchItem_textView_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 / 4"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView23"
                app:layout_constraintEnd_toEndOf="@+id/searchItem_textView_price"
                app:layout_constraintTop_toTopOf="@+id/textView23" />

            <TextView
                android:id="@+id/searchItem_textView_bags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="2 / 2"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView35"
                app:layout_constraintStart_toEndOf="@+id/textView35"
                app:layout_constraintTop_toTopOf="@+id/textView35" />

            <Button
                android:id="@+id/searchItem_button_select"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/main_btn_login"
                android:text="Επεξεργασία"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/searchItem_textView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10€"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="@+id/searchItem_user_pic"
                app:layout_constraintBottom_toBottomOf="@+id/searchItem_user_pic"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/searchItem_textView_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/searchItem_textView_stars"
                app:layout_constraintStart_toEndOf="@+id/searchItem_textView_stars"
                app:layout_constraintTop_toTopOf="@+id/searchItem_textView_stars" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>